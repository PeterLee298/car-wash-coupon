.index-container {
  padding: 20rpx;
}

.user-section {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: linear-gradient(135deg, #1890ff, #36cfc9);
  padding: 40rpx;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
}

.user-info {
  display: flex;
  flex-direction: column;
}

.store-name {
  color: #fff;
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.user-name {
  color: rgba(255, 255, 255, 0.8);
  font-size: 26rpx;
}

.scan-btn {
  padding: 20rpx 30rpx;
  background-color: rgba(255, 255, 255, 0.2);
  border-radius: 12rpx;
}

.scan-text {
  color: #fff;
  font-size: 24rpx;
}

.login-section {
  display: flex;
  justify-content: center;
  align-items: center;
  background: linear-gradient(135deg, #1890ff, #36cfc9);
  padding: 60rpx 40rpx;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
}

.login-text {
  color: #fff;
  font-size: 32rpx;
}

.stats-section {
  display: flex;
  background-color: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.stats-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stats-value {
  font-size: 48rpx;
  font-weight: bold;
  color: #1890ff;
  margin-bottom: 10rpx;
}

.stats-label {
  font-size: 26rpx;
  color: #999;
}

.stats-divider {
  width: 1rpx;
  background-color: #f0f0f0;
}

.menu-section {
  background-color: #fff;
  border-radius: 16rpx;
  overflow: hidden;
}

.menu-item {
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-text {
  font-size: 30rpx;
  color: #333;
}

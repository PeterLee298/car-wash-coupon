.login-container {
  padding: 60rpx 40rpx;
  background-color: #fff;
  min-height: 100vh;
}

.login-header {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 80rpx;
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.subtitle {
  font-size: 26rpx;
  color: #999;
}

.login-form {
  margin-bottom: 40rpx;
}

.form-item {
  display: flex;
  align-items: center;
  border-bottom: 1rpx solid #e8e8e8;
  padding: 30rpx 0;
}

.input {
  flex: 1;
  font-size: 32rpx;
}

.code-item {
  justify-content: space-between;
}

.code-input {
  flex: 1;
}

.code-btn {
  color: #1890ff;
  font-size: 28rpx;
  padding: 10rpx 20rpx;
  border: 1rpx solid #1890ff;
  border-radius: 8rpx;
}

.code-btn.disabled {
  color: #999;
  border-color: #d9d9d9;
}

.login-btn {
  width: 100%;
  height: 88rpx;
  background-color: #1890ff;
  color: #fff;
  font-size: 32rpx;
  border-radius: 44rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.login-btn.loading {
  background-color: #69c0ff;
}

.tips {
  margin-top: 40rpx;
  text-align: center;
}

.tips-text {
  font-size: 24rpx;
  color: #999;
}

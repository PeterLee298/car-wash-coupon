.container {
  background-color: #f5f5f5;
  min-height: 100vh;
}

.header {
  background-color: #fff;
  padding: 20rpx;
  border-bottom: 1rpx solid #e5e5e5;
}

.month-selector {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 12rpx 16rpx;
  background-color: #f0f0f0;
  border-radius: 8rpx;
}

.month-selector text {
  font-size: 28rpx;
  color: #333;
}

.arrow {
  font-size: 20rpx;
  color: #666;
}

.record-list {
  padding: 20rpx;
}

.record-item {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.record-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
  padding-bottom: 12rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.coupon-code {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
}

.status-pending {
  font-size: 24rpx;
  color: #ff9500;
  background-color: #fff3e0;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
}

.status-approved {
  font-size: 24rpx;
  color: #34c759;
  background-color: #e8f5e8;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
}

.status-rejected {
  font-size: 24rpx;
  color: #ff3b30;
  background-color: #ffebee;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
}

.status-upload {
  font-size: 24rpx;
  color: #007aff;
  background-color: #e3f2fd;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
}

.record-body {
  margin-bottom: 16rpx;
}

.info-row {
  display: flex;
  margin-bottom: 12rpx;
  align-items: flex-start;
}

.label {
  font-size: 26rpx;
  color: #666;
  width: 120rpx;
  flex-shrink: 0;
}

.value {
  font-size: 26rpx;
  color: #333;
  flex: 1;
  line-height: 36rpx;
}

.record-footer {
  display: flex;
  justify-content: flex-end;
  padding-top: 12rpx;
  border-top: 1rpx solid #f0f0f0;
}

.upload-btn {
  font-size: 24rpx;
  color: #007aff;
  background-color: #e3f2fd;
  padding: 8rpx 24rpx;
  border-radius: 16rpx;
  border: none;
}

.upload-btn::after {
  border: none;
}

.loading {
  text-align: center;
  padding: 40rpx 0;
  color: #999;
  font-size: 26rpx;
}

.empty {
  text-align: center;
  padding: 80rpx 0;
  color: #999;
  font-size: 28rpx;
}

.no-more {
  text-align: center;
  padding: 20rpx 0;
  color: #999;
  font-size: 24rpx;
}

.month-picker-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: flex-end;
  justify-content: center;
  z-index: 1000;
}

.month-picker {
  background-color: #fff;
  width: 100%;
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
  max-height: 60vh;
  overflow: hidden;
}

.picker-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.picker-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
}

.close-btn {
  font-size: 36rpx;
  color: #666;
}

.picker-body {
  padding: 20rpx;
  max-height: 40vh;
  overflow-y: auto;
}

.month-item {
  padding: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
  text-align: center;
}

.month-item:last-child {
  border-bottom: none;
}

.month-item text {
  font-size: 28rpx;
  color: #333;
}
.my-container {
  padding: 20rpx;
}

.user-section {
  background: linear-gradient(135deg, #1890ff, #36cfc9);
  padding: 40rpx;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
}

.user-info {
  display: flex;
  flex-direction: column;
}

.store-name {
  color: #fff;
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.user-name {
  color: rgba(255, 255, 255, 0.9);
  font-size: 28rpx;
  margin-bottom: 6rpx;
}

.user-phone {
  color: rgba(255, 255, 255, 0.8);
  font-size: 26rpx;
}

.login-section {
  display: flex;
  justify-content: center;
  align-items: center;
  background: linear-gradient(135deg, #1890ff, #36cfc9);
  padding: 60rpx 40rpx;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
}

.login-text {
  color: #fff;
  font-size: 32rpx;
}

.logout-section {
  margin-top: 60rpx;
}

.logout-btn {
  width: 100%;
  height: 88rpx;
  background-color: #fff;
  color: #ff4d4f;
  font-size: 32rpx;
  border-radius: 44rpx;
  border: 1rpx solid #ff4d4f;
}

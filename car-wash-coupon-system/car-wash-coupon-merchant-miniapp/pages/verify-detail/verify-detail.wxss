.container {
  background-color: #f5f5f5;
  min-height: 100vh;
}

.loading {
  text-align: center;
  padding: 80rpx 0;
  color: #999;
  font-size: 28rpx;
}

.detail-content {
  padding: 20rpx;
}

.status-section {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 40rpx 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  text-align: center;
}

.status-pending {
  font-size: 36rpx;
  font-weight: 600;
  color: #ff9500;
  background-color: #fff3e0;
  padding: 12rpx 24rpx;
  border-radius: 24rpx;
}

.status-approved {
  font-size: 36rpx;
  font-weight: 600;
  color: #34c759;
  background-color: #e8f5e8;
  padding: 12rpx 24rpx;
  border-radius: 24rpx;
}

.status-rejected {
  font-size: 36rpx;
  font-weight: 600;
  color: #ff3b30;
  background-color: #ffebee;
  padding: 12rpx 24rpx;
  border-radius: 24rpx;
}

.status-upload {
  font-size: 36rpx;
  font-weight: 600;
  color: #007aff;
  background-color: #e3f2fd;
  padding: 12rpx 24rpx;
  border-radius: 24rpx;
}

.section {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  margin-bottom: 20rpx;
  color: #333;
  padding-bottom: 12rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.info-item {
  display: flex;
  margin-bottom: 16rpx;
  align-items: flex-start;
}

.info-item:last-child {
  margin-bottom: 0;
}

.label {
  font-size: 28rpx;
  color: #666;
  width: 160rpx;
  flex-shrink: 0;
}

.value {
  font-size: 28rpx;
  color: #333;
  flex: 1;
  line-height: 40rpx;
}

.phone {
  color: #007aff;
  text-decoration: underline;
}

.reject-reason {
  color: #ff3b30;
  background-color: #ffebee;
  padding: 12rpx;
  border-radius: 8rpx;
  word-break: break-all;
}

.photo-list {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
  margin-top: 16rpx;
}

.photo-item {
  width: 180rpx;
  height: 180rpx;
  border-radius: 8rpx;
  overflow: hidden;
  background-color: #f0f0f0;
}

.photo {
  width: 100%;
  height: 100%;
}

.no-photos {
  text-align: center;
  padding: 40rpx 0;
  color: #999;
  font-size: 26rpx;
  background-color: #f9f9f9;
  border-radius: 8rpx;
}

.action-section {
  margin-top: 40rpx;
  margin-bottom: 40rpx;
}

.upload-btn {
  width: 100%;
  height: 80rpx;
  background-color: #1890ff;
  color: #fff;
  font-size: 32rpx;
  border-radius: 40rpx;
  border: none;
}

.upload-btn::after {
  border: none;
}

.empty {
  text-align: center;
  padding: 80rpx 0;
  color: #999;
  font-size: 28rpx;
}
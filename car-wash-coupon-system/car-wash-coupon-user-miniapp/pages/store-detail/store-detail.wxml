<view class="store-detail-container" wx:if="{{store}}">
  <view class="store-header">
    <text class="store-name">{{store.name}}</text>
    <view class="store-actions">
      <view class="action-btn" bindtap="onCall">
        <text class="action-text">电话</text>
      </view>
      <view class="action-btn" bindtap="onNavigate">
        <text class="action-text">导航</text>
      </view>
    </view>
  </view>

  <view class="store-info card">
    <view class="info-item">
      <text class="info-label">地址</text>
      <text class="info-value">{{store.address}}</text>
    </view>
    <view class="info-item" wx:if="{{store.businessHours}}">
      <text class="info-label">营业时间</text>
      <text class="info-value">{{store.businessHours}}</text>
    </view>
    <view class="info-item" wx:if="{{store.contactPhone}}">
      <text class="info-label">联系电话</text>
      <text class="info-value">{{store.contactPhone}}</text>
    </view>
  </view>
</view>

<view class="loading-container" wx:if="{{loading}}">
  <text>加载中...</text>
</view>
